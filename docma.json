{
	"app": {
		"base": "/tasty",
		"entrance": "content:readme",
		"routing": "query",
		"server": "github",
		"title": "Tasty"
	},
	"dest": "docs",
	"jsdoc": {
		"sort": "grouped"
	},
	"src": [
		{
			"client": [
				"src/**/*.js"
			],
			"server": [
				"lib/**/*.js",
				"!lib/context.js",
				"!lib/runner.js",
				"!lib/thing.js",
				"!lib/tool.js"
			],
			"test": [
				"lib/context.js",
				"lib/runner.js",
				"lib/thing.js",
				"lib/tool.js"
			]
		},
		"README.md"
	],
	"template": {
		"options": {
			"title": "Tasty",
			"navbar": {
				"menu": [
					{
						"label": "Introduction",
						"href": "/tasty/",
						"iconClass": "fas fa-book"
					},
					{
						"label": "Client API",
						"href": "/tasty/?api=client",
						"iconClass": "fas fa-mouse-pointer"
					},
					{
						"label": "Server API",
						"href": "/tasty/?api=server",
						"iconClass": "fas fa-file-code"
					},
					{
						"label": "Test API",
						"href": "/tasty/?api=test",
						"iconClass": "fas fa-clipboard-list"
					},
					{
						"label": "GitHub",
						"href": "https://github.com/chge/tasty",
						"target": "_blank",
						"iconClass": "fab fa-github"
					}
				]
			}
		},
		"path": "default"
	}
}