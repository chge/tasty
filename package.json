{
  "name": "tasty",
  "title": "Tasty",
  "version": "0.2.1",
  "description": "Integration testing helper for web",
  "main": "src/server/main.js",
  "preferGlobal": true,
  "bin": {
    "tasty": "./src/cli.js"
  },
  "dependencies": {
    "glob": "^7.1.0",
    "requireg": "^0.1.6",
    "socket.io": "^1.4.8",
    "socket.io-client": "^1.4.8",
    "tasty-sandbox": "^2.0.5"
  },
  "devDependencies": {
    "browserify": "^13.1.0",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "coveralls": "^2.11.14",
    "istanbul": "^0.4.5",
    "jasmine": "^2.5.2",
    "jasmine-spec-reporter": "^2.7.0",
    "mocha": "^3.1.0",
    "qunitjs": "^2.0.1",
    "typescript": "^2.0.3"
  },
  "scripts": {
    "prepublish": "node --harmony src/build",
    "test": "npm run test:cover && npm run test:run && npm run test:report",
    "test:cover": "node --harmony src/build --coverage",
    "test:run": "node --harmony ./node_modules/istanbul/lib/cli cover --dir ./coverage_server --report lcovonly ./node_modules/mocha/bin/_mocha -- --colors --ui bdd test/spec/*.js",
    "test:report": "node --harmony test/coverage **/lcov.info coverage/lcov.info && node --harmony ./node_modules/coveralls/bin/coveralls < ./coverage/lcov.info"
  },
  "engines" : {
    "node" : ">=4.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chge/tasty.git"
  },
  "keywords": [
    "integration",
    "testing",
    "web"
  ],
  "author": "chge",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chge/tasty/issues"
  },
  "homepage": "https://github.com/chge/tasty"
}
