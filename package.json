{
  "name": "tasty",
  "title": "Tasty",
  "version": "0.3.3",
  "description": "Integration testing helper for web",
  "main": "src/server/main.js",
  "preferGlobal": true,
  "bin": {
    "tasty": "./src/cli.js"
  },
  "dependencies": {
    "glob": "^7.1.1",
    "minimist": "^1.2.0",
    "requireg": "^0.1.6",
    "socket.io": "^1.5.0",
    "socket.io-client": "^1.5.0",
    "tasty-sandbox": "^2.0.5"
  },
  "devDependencies": {
    "browserify": "^13.1.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-http": "^3.0.0",
    "coveralls": "^2.11.14",
    "istanbul": "^0.4.5",
    "jasmine": "^2.5.2",
    "jasmine-spec-reporter": "^2.7.0",
    "mocha": "^3.1.2",
    "nyc": "^8.3.1",
    "qunitjs": "^2.0.1",
    "selenium-webdriver": "^3.0.0-beta-3",
    "typescript": "^2.0.3"
  },
  "scripts": {
    "prepublish": "node --harmony src/build",
    "pretest": "node --harmony src/build --coverage",
    "test": "npm run test:coverage && npm run test:support",
    "test:coverage": "node --harmony node_modules/nyc/bin/nyc --reporter lcovonly --report-dir coverage_server --temp-directory coverage_server node_modules/mocha/bin/mocha --colors --harmony --reporter list --ui bdd test/spec/*.js",
    "test:support": "node --harmony src/build && node --harmony node_modules/mocha/bin/mocha --colors --reporter list --ui bdd test/support.js",
    "test:windows": "node --harmony node_modules/mocha/bin/mocha --colors --ui bdd test/spec/*.js",
    "posttest": "node --harmony test/report **/*.info coverage.info && node --harmony node_modules/coveralls/bin/coveralls < coverage.info"
  },
  "engines": {
    "node": ">=4.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chge/tasty.git"
  },
  "keywords": [
    "integration",
    "testing",
    "web"
  ],
  "author": "chge",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chge/tasty/issues"
  },
  "homepage": "https://github.com/chge/tasty"
}
