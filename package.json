{
  "name": "tasty",
  "version": "0.13.8",
  "description": "Integration testing helper for web",
  "main": "lib/main.js",
  "preferGlobal": true,
  "bin": {
    "tasty": "./bin/tasty.js"
  },
  "files": [
    "bin",
    "dist",
    "lib",
    "src",
    "!.eslintrc"
  ],
  "dependencies": {
    "content-security-policy-builder": "^2.0.0",
    "content-security-policy-parser": "^0.1.1",
    "debug": "^3.1.0",
    "glob": "^7.1.2",
    "minimist": "^1.2.0",
    "platform": "^1.3.5",
    "requireg": "^0.1.8",
    "tasty-sandbox": "^2.0.6",
    "ws": "^4.1.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^3.0.0",
    "chai-spies": "^1.0.0",
    "coveralls": "^3.0.1",
    "docma": "^2.1.0",
    "es6-promise": "^4.2.4",
    "eslint": "^4.19.1",
    "istanbul": "^0.4.5",
    "jasmine": "^3.1.0",
    "jasmine-spec-reporter": "^4.2.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "qunit": "^2.6.1",
    "rollup": "^0.61.2",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.2.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-uglify": "^3.0.0",
    "selenium-webdriver": "^3.6.0",
    "slimerjs": "^1.0.0",
    "tasty-treewalker": "^0.3.5"
  },
  "scripts": {
    "appveyor": "node --harmony node_modules/mocha/bin/mocha --colors --reporter list --ui bdd test/spec/*.js --headful",
    "build": "node --harmony node_modules/rollup/bin/rollup -c",
    "docs": "node --harmony node_modules/docma/bin/docma --config docma.json",
    "lint": "node --harmony node_modules/eslint/bin/eslint bin && node --harmony node_modules/eslint/bin/eslint lib && node --harmony node_modules/eslint/bin/eslint src",
    "prepublish": "npm run lint && npm run build && npm run docs",
    "pretest": "node --harmony node_modules/rollup/bin/rollup -c --coverage",
    "posttest": "node --harmony test/report **/*.info coverage.info && node --harmony node_modules/coveralls/bin/coveralls < coverage.info",
    "support": "node --harmony node_modules/mocha/bin/mocha --colors --harmony --reporter list --ui bdd test/support.js",
    "test": "node --harmony node_modules/nyc/bin/nyc --reporter lcovonly --report-dir coverage_server --temp-directory coverage_server node_modules/mocha/bin/mocha --colors --reporter list --ui bdd test/spec/*.js"
  },
  "engines": {
    "node": ">=4.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chge/tasty.git"
  },
  "keywords": [
    "driver",
    "integration",
    "testing",
    "web"
  ],
  "author": "chge",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chge/tasty/issues"
  },
  "homepage": "https://chge.github.io/tasty"
}
