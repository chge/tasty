{
  "name": "tasty",
  "title": "Tasty",
  "version": "0.4.1",
  "description": "Integration testing helper for web",
  "main": "lib/main.js",
  "preferGlobal": true,
  "bin": {
    "tasty": "./bin/tasty.js"
  },
  "dependencies": {
    "glob": "^7.1.1",
    "minimist": "^1.2.0",
    "requireg": "^0.1.6",
    "socket.io": "1.4.7",
    "socket.io-client": "1.4.7",
    "tasty-sandbox": "^2.0.5"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-http": "^3.0.0",
    "coveralls": "^2.11.14",
    "es6-promise": "^4.0.5",
    "istanbul": "^0.4.5",
    "jasmine": "^2.5.2",
    "jasmine-spec-reporter": "^2.7.0",
    "mocha": "^3.1.2",
    "nyc": "^8.3.1",
    "qunitjs": "^2.0.1",
    "rollup": "^0.36.3",
    "rollup-plugin-buble": "^0.14.0",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-istanbul": "^1.1.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "selenium-webdriver": "^3.0.0-beta-3",
    "slimerjs": "^0.906.2"
  },
  "scripts": {
    "prepublish": "node node_modules/rollup/bin/rollup --config rollup.js",
    "pretest": "node node_modules/rollup/bin/rollup --config rollup.js --coverage",
    "test": "npm run test:coverage && npm run test:support",
    "test:coverage": "node node_modules/nyc/bin/nyc --reporter lcovonly --report-dir coverage_server --temp-directory coverage_server node_modules/mocha/bin/mocha --colors --reporter list --ui bdd test/spec/*.js",
    "test:support": "node node_modules/rollup/bin/rollup --config rollup.js && node node_modules/mocha/bin/mocha --colors --reporter list --ui bdd test/support.js",
    "test:windows": "node node_modules/mocha/bin/mocha --colors --reporter list --ui bdd test/spec/**/!(slimer).js",
    "posttest": "node test/report **/*.info coverage.info && node node_modules/coveralls/bin/coveralls < coverage.info"
  },
  "engines": {
    "node": ">=4.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chge/tasty.git"
  },
  "keywords": [
    "integration",
    "testing",
    "web"
  ],
  "author": "chge",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chge/tasty/issues"
  },
  "homepage": "https://github.com/chge/tasty"
}
