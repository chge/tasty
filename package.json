{
  "name": "tasty-js",
  "title": "Tasty",
  "version": "0.0.7",
  "description": "Integration testing helper for web",
  "main": "src/server/main.js",
  "preferGlobal": true,
  "bin": {
    "tasty": "./src/cli.js"
  },
  "dependencies": {
    "glob": "^7.1.0",
    "requireg": "^0.1.6",
    "socket.io": "^1.4.8",
    "tasty-sandbox": "^2.0.5"
  },
  "scripts": {
    "prepublish": "node --harmony src/build",
    "pretest": "npm install chai mocha jasmine qunitjs",
    "selftest": "npm run selftest-before && npm run selftest-jasmine && npm run selftest-mocha && npm run selftest-qunit",
    "selftest-before": "npm install jasmine-spec-reporter",
    "selftest-jasmine": "node --harmony ./src/cli.js --colors --include=test/self/jasmine/*.js --mode=multiple --reporter=jasmine-spec-reporter --runner=jasmine --static-root=test/res",
    "selftest-mocha": "node --harmony ./src/cli.js --assert=chai --expect=chai --colors --runner=mocha --mode=multiple --static-root=test/res --include=test/self/mocha/*.js",
    "selftest-qunit": "node --harmony ./src/cli.js --colors --runner=qunit --mode=multiple --static-root=test/res --include=test/self/qunit/*.js",
    "test": "node --harmony test/run.js --colors"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chge/tasty.git"
  },
  "keywords": [
    "integration",
    "testing",
    "web"
  ],
  "author": "chge",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chge/tasty/issues"
  },
  "homepage": "https://github.com/chge/tasty"
}
