{
  "name": "tasty",
  "title": "Tasty",
  "version": "0.8.0",
  "description": "Integration testing helper for web",
  "main": "lib/main.js",
  "preferGlobal": true,
  "bin": {
    "tasty": "./bin/tasty.js"
  },
  "dependencies": {
    "engine.io": "^1.7.2",
    "glob": "^7.1.1",
    "minimist": "^1.2.0",
    "requireg": "^0.1.6",
    "tasty-sandbox": "^2.0.5"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-http": "^3.0.0",
    "chai-spies": "^0.7.1",
    "coveralls": "^2.11.15",
    "docma": "^1.2.0",
    "engine.io-client": "^1.7.2",
    "es6-promise": "^4.0.5",
    "eslint": "^3.10.1",
    "istanbul": "^0.4.5",
    "jasmine": "^2.5.2",
    "jasmine-spec-reporter": "^2.7.0",
    "mocha": "^3.1.2",
    "nyc": "^9.0.1",
    "qunitjs": "^2.0.1",
    "rollup": "^0.36.3",
    "rollup-plugin-buble": "^0.14.0",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-istanbul": "^1.1.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "selenium-webdriver": "^3.0.1",
    "slimerjs": "^0.906.2",
    "tasty-treewalker": "^0.3.4"
  },
  "scripts": {
    "build": "node node_modules/rollup/bin/rollup -c",
    "docs": "node node_modules/docma/bin/docma --config docma.json",
    "lint": "node node_modules/eslint/bin/eslint src && node node_modules/eslint/bin/eslint lib",
    "prepublish": "npm run build && npm run docs && npm run lint",
    "pretest": "node node_modules/rollup/bin/rollup -c --coverage",
    "posttest": "node test/report **/*.info coverage.info && node node_modules/coveralls/bin/coveralls < coverage.info",
    "test": "npm run test:coverage && npm run test:support",
    "test:coverage": "node node_modules/nyc/bin/nyc --reporter lcovonly --report-dir coverage_server --temp-directory coverage_server node_modules/mocha/bin/mocha --colors --reporter list --ui bdd test/spec/*.js",
    "test:support": "node node_modules/rollup/bin/rollup -c && node node_modules/mocha/bin/mocha --colors --reporter list --ui bdd test/support.js || echo support tests fail",
    "test:windows": "node node_modules/mocha/bin/mocha --colors --reporter list --ui bdd test/spec/**/!(slimer).js"
  },
  "engines": {
    "node": ">=4.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chge/tasty.git"
  },
  "keywords": [
    "integration",
    "testing",
    "web"
  ],
  "author": "chge",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chge/tasty/issues"
  },
  "homepage": "https://github.com/chge/tasty"
}
